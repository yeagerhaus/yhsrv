{
  "name": "yhsrv",
  "version": "1.0.0",
  "description": "Self-hosted music server with Sonic Analysis, Sweet Fades, and Spotify/Deezer integration",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "setup": "bun scripts/setup.ts",
    "setup:docker": "bun scripts/setup.ts --docker-only",
    "build": "tsc -p tsconfig.build.json && tsc-alias",
    "dev": "bun --watch src/server.ts",
    "start": "bun dist/src/server.js",
    "migrate": "bun dist/src/db/migrate.js",
    "tunnel-url": "docker-compose -f docker/docker-compose.yml logs cloudflared 2>&1 | grep -o 'https://[a-z0-9-]*\\.trycloudflare\\.com' | head -1",
    "test": "vitest"
  },
  "keywords": [
    "music",
    "server",
    "streaming",
    "audio"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/multipart": "^8.0.1",
    "@fastify/static": "^7.0.0",
    "axios": "^1.7.2",
    "cli-progress": "^3.12.0",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "fastify": "^4.26.2",
    "fluent-ffmpeg": "^2.1.3",
    "got": "^14.4.5",
    "kysely": "^0.27.2",
    "music-metadata": "^8.1.4",
    "node-cron": "^3.0.3",
    "node-id3": "^0.2.6",
    "ora": "^9.0.0",
    "pg": "^8.11.3",
    "picocolors": "^1.1.1",
    "tough-cookie": "^5.1.2",
    "yhdl": "^1.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/node": "^20.14.10",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.11.0",
    "@types/tough-cookie": "^4.0.5",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3",
    "vitest": "^1.6.0"
  }
}
