# Server Configuration
PORT=8080
HOST=0.0.0.0
NODE_ENV=development

# Database Configuration
# You can use either DATABASE_URL or individual DB_* variables
DATABASE_URL=postgresql://yhsrv:password@localhost:5432/yhsrv
# Alternative: use individual variables
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=yhsrv
# DB_USER=yhsrv
# DB_PASSWORD=password

# Music Library
MUSIC_ROOT_PATH="/path/to/your/music"
TRANSCODE_CACHE_PATH=./cache/transcodes

# Spotify OAuth
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://localhost:8080/api/auth/spotify/callback

# Deezer (yhdl)
# Optional: Deezer ARL token for library synchronization
DEEZER_ARL=
SYNC_CONCURRENCY=5
SYNC_CHECK_INTERVAL=24

# FFmpeg
FFMPEG_PATH=ffmpeg
FFPROBE_PATH=ffprobe

# Audio Processing
DEFAULT_TRANSCODE_BITRATE=320
SUPPORTED_FORMATS=flac,mp3,m4a,aac,ogg,wav

# Library Management
# Set to 'true' to skip automatic library scan on startup (useful for development)
SKIP_STARTUP_SCAN=false
